@using Webdiyer.WebControls.Mvc;
@model Company.Model.Staff


@{
    ViewBag.Title = "CreateOrEdit";
    Layout = null;
}
@Html.Partial("~/Views/Shared/_header.cshtml")
<script type="text/javascript">
    layui.use('form', function () {
        var form = layui.form;
        var a = layer.title();
        console.log(a)
        //监听提交
        form.on('submit(formDemo)', function (data) { 
            getAjax("/Staff/CreateOrEditResult", "json=" + JSON.stringify(data.field), function (rt) {           
                if (httpRtn.code==0) {
                    layer.msg("提交成功！");
                    $("#funcbar").attr("style", "display:none")
                    return true;
                }
                layer.msg(httpRtn.msg);                
            })
            return false;
        });
    });
</script>


<form class="layui-form" style="margin-top: 3%;">
    <input type="text" id="staffid" name="staffid"   hidden="hidden">
    <div class="layui-form-item">
        <label class="layui-form-label">姓名</label>
        <div class="layui-input-block">
            <input type="text" name="name" required lay-verify="required" placeholder="请输入姓名" autocomplete="off" class="layui-input" style="width:60%">
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">年龄</label>
        <div class="layui-input-block">
            <input type="text" name="age" required lay-verify="required" placeholder="请输入年龄" autocomplete="off" class="layui-input" style="width:60%">
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">性别</label>
        <div class="layui-input-block">
            <input type="radio" name="sex" value="男" title="男" checked>
            <input type="radio" name="sex" value="女" title="女">
        </div>
    </div>
    <div class="layui-form-item" style="position:fixed;bottom:0" id="funcbar">
        <div class="layui-input-block">
            <button class="layui-btn" lay-submit lay-filter="formDemo">立即提交</button>
            <button type="reset" class="layui-btn layui-btn-primary">重置</button>
        </div>
    </div>
</form>

